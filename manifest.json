{
  "manifest_version": 3,
  "name": "Tube Cleaner",
  "version": "0.01",
  "description": "Remove YouTube ads and simplify UI.",
  "permissions": ["scripting", "tabs"],
  "host_permissions": ["*://www.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Tube Cleaner"
  }
}
